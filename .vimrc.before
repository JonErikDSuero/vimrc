" disable snipmate
call janus#disable_plugin('snipmate')
call janus#disable_plugin('ctrlp')
call janus#disable_plugin('vim-gitgutter')

" set Leader key
let mapleader = " "

" Show Hidden Files
let NERDTreeShowHidden=1

" sort buffer by basename
let g:buffergator_sort_regime = "basename"

" disable h, and H for ack.vim
let g:ack_mappings = { "h": "", "H": "" }

" use f for finding a character
nmap f <Plug>(easymotion-s)

